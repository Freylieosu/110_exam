<Page x:Class="_110_exam.login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_110_exam"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">

    <Grid>
        <StackPanel Background="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <Label Margin="0" Content="Авторизация" HorizontalAlignment="Center"></Label>
            <Label Content="Логин" ></Label>
            <TextBox Margin="10,2,10,5"></TextBox>
            <Label Content="Пароль"></Label>
            <TextBox Margin="10,2,10,10"></TextBox>
            <UniformGrid Columns="2">
                <Button Margin="10" Height="20" Content="Регистрация" Click="RegClick"></Button>
                <Button Margin="10" Height="20" Content="Войти" Click='Button_Click'></Button>
            </UniformGrid>

        </StackPanel>
    </Grid>
</Page>
